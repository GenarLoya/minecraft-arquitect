---
import BlockDetailCard from "./BlockDetailCard.astro";
import BlockItem from "./BlockItem.astro";
import SearchInput from "./SearchInput.astro";

const EXAMPLE_BLOCK_NAMES = [
  "Stone",
  "Dirt",
  "Grass",
  "Sand",
  "Water",
  "Lava",
].reduce((acc, name) => {
  acc.push(name);
  acc.push(name + "Slab");
  acc.push(name + "Stairs");
  acc.push(name + "SlabStairs");
  return acc;
}, [] as string[]);
---

<div
  class="flex flex-col fixed bg-secondary p-common h-full min-w-[500px] max-w-[500px] space-y-2 z-50"
>
  <SearchInput placeholder="Search blocks" />
  <div
    class="flex flex-col flex-1 overflow-y-auto bg-primary p-common rounded-common shadow-md"
  >
    <div class="flex flex-col flex-1 overflow-y-auto px-common">
      <div class="grid grid-cols-3 gap-2">
        {EXAMPLE_BLOCK_NAMES.map((name) => <BlockItem name={name} />)}
      </div>
    </div>
  </div>
  <BlockDetailCard />
</div>
