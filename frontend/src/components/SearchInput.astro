---
import SearchIcon from "../icons/SearchIcon.astro";

export let placeholder: string = "Search...";
---

<div
  class="flex space-x-2 w-full px-3 py-2 rounded-common text-black bg-primary"
>
  <SearchIcon />
  <input
    type="text"
    placeholder={placeholder}
    class="w-full bg-transparent outline-none border-b-4 border-primary focus:border-b-secondary"
  />
</div>
