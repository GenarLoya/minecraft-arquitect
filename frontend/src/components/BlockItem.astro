---
interface Props {
  name: string;
}

import BlockIcon from "../icons/BlockIcon.astro";

const { name } = Astro.props;
---

<div
  class="flex flex-col justify-center items-center w-full rounded-common p-common bg-secondary"
>
  <BlockIcon />
  <span class="text-common block truncate w-full text-center text-sm"
    >{name}</span
  >
</div>
